@model PRO_001.Models.MonConsolaUsuariosWeb

@{
    ViewData["Title"] = "login";

}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form class="login100-form validate-form flex-sb flex-w" asp-action="Index" asp-controller="Home" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                <span class="login100-form-title p-b-32">
                    INICIAR SESION
                </span>

                <span class="txt1 p-b-11">
                    Usuario
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Usuario es requerido">
                    <input asp-for="Correo" class="input100" type="text" name="user">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Contrase&ntilde;a
                </span>
                <div class="wrap-input100 validate-input m-b-12" data-validate="Contrase&ntilde;a es requerida ">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    <input asp-for="Pass" class="input100" type="password" name="pass">
                    <span class="focus-input100"></span>
                </div>

                <div class="flex-sb-m w-full p-b-48">
                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me" checked="checked">
                        <label class="label-checkbox100" for="ckb1">
                            Recuerdame
                        </label>
                    </div>

                    <div>
                        <a href="#" class="txt3">
                            Olvidaste tu contrase&ntilde;a?
                        </a>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        INICIAR SESION
                    </button>
                </div>
                <br />
                @if (ViewBag.alert != null)
                {

                    <div>
                        <span class="text-danger">@ViewBag.alert</span>
                    </div>
                }
            </form>
        </div>
    </div>
</div>


<div id="dropDownSelect1"></div>
